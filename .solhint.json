{
  "extends": "solhint:recommended",
  "rules": {
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-fixed": false,
    "indent": ["warn", 4],
    "max-line-length": 150,
    "var-name-mixedcase": false,
    "func-param-name-mixedcase": false,
    "compiler-version": ["error", "^0.8.0"]
  }
}